<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#d4ffe5" />
            <gradient android:angle="-90" android:startColor="#dbffe9" android:endColor="#d4ffe5"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#d4ffe5" />
            <solid android:color="#d4ffe5"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#e5ffef" />
            <gradient android:angle="-90" android:startColor="#ccfcdf" android:endColor="#a7debd" />
        </shape>
    </item>
</selector>